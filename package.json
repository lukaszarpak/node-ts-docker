{
  "name": "node-ts-docker-starter",
  "version": "1.0.0",
  "description": "A starter Node.js project with TypeScript. Run in Docker container.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc -p .",
    "start": "NODE_PATH=./dist NODE_ENV=prod NODE_PORT=3000 node dist/index.js",
    "lint": "eslint . --ext .ts"
  },
  "author": "lukaszarpak",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}
